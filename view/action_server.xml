<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data noupdate="1">
    <record id="ir_cron_mi_fecha_preventa" model="ir.cron">
      <field name="name">Fechas de preventa</field>
      <field name="model_id" ref="product.model_product_template"/>
      <field name="state">code</field>
      <field name="code">model.limpiar_fecha_preventa()</field>

      <field name="interval_number">1</field>
      <field name="interval_type">days</field>
      <field name="numbercall">-1</field>
      <field name="active">True</field>

      <!-- Recomendado -->
      <field name="user_id" ref="base.user_root"/>
      <field name="doall" eval="False"/>

      <!-- Próxima ejecución: 00:05:00 -->
      <field name="nextcall">2026-02-24 00:05:00</field>
    </record>
  </data>
</odoo>