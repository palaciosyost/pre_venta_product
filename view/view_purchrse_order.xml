<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_view_compras" model="ir.ui.view">
        <field name="name">purchase.order.view.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_confirm']" position="after">
                <button name="action_espera" type="object" string="Confirmar espera" invisible="not is_preventa or state != 'purchase' or etiqueta_estado"></button>
            </xpath>
             <xpath expr="//field[@name='date_order']" position="before">
                <field name="is_preventa"/>
                <field name="etiqueta_estado" widget="badge" options="{'class': 'bg-warning'}"/>
            </xpath>
            
        </field>
    </record>

</odoo>
